<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_weight="1"
    app:cardCornerRadius="0dp"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        >

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/user_home_trending_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/ic_baseline_insert_photo_24"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/user_home_trending_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_home_trending_image"
            android:gravity="center"
            android:text="Deal name"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/user_home_trending_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_home_trending_name"
            android:gravity="center"
            android:text="Deal price"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>